{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "go",
			"label": "build windows package",
			"command": "build",
			"args": [
				"-ldflags=-s -w -H windowsgui",
				"-o",
				"${workspaceFolder}/bin/update.unpack.exe",
				"${workspaceFolder}/autoupdate/cmd/main.go"
			],
			"problemMatcher": [
				"$go"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"detail": "go build ${fileDirname}"
		}
		,
		{
			"dependsOn": [
                "build windows package"
            ],
			"type": "shell",
			"label": "build windows with upx",
			"command": "upx",
			"args": [
				"--best",
				"--lzma",
				"-f",
				"-o",
				"${workspaceFolder}/bin/update.exe",
				"${workspaceFolder}/bin/update.unpack.exe"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "upx ${fileDirname}"
		}
	]
}